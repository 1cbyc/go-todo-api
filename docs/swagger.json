{
    "swagger": "2.0",
    "info": {
        "description": "A sophisticated and professional Todo REST API built with Go, Gin, and GORM",
        "title": "Todo API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
